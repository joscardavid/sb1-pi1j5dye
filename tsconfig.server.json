{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "paths": {
      "@server/*": ["./server/*"]
    }
  },
  "include": ["server/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}